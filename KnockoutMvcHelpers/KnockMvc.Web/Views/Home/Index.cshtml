@{
    ViewBag.Title = "Grid Sample";
}

<style>
    .wait-modal {
        display: none;
        position: absolute;
        z-index: 1000;
        background: rgba(255, 255, 255, .7) url('data:image/gif;base64,') 50% 50% no-repeat;
    }
</style>

<div id="gridFilter" class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div>
            <button type="button" class="btn btn-default" data-bind="click: load"><span class="glyphicon glyphicon-refresh"></span></button>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Int value</th>
                    <th>Double value</th>
                    <th>Decimal value</th>
                    <th>String value</th>
                    <th>Bool value</th>
                    <th>Date value</th>
                    <th>Enum value</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: {data: Rows, beforeRemove: fadeOutItem, afterAdd: fadeInItem}">
                <tr>
                    <td data-bind="text: IntValue"></td>
                    <td data-bind="text: DoubleValue"></td>
                    <td data-bind="text: DecimalValue"></td>
                    <td data-bind="text: StringValue"></td>
                    <td data-bind="text: BoolValue"></td>
                    <td data-bind="text: DateValue"></td>
                    <td data-bind="text: EnumValue"></td>
                    <td>
                        <button type="button" class="btn btn-sm" data-bind="click: $parent.edit_click"><span class="glyphicon glyphicon-edit"></span></button>
                        <button type="button" class="btn btn-sm" data-bind="click: $parent.remove_click"><span class="glyphicon glyphicon-remove"></span></button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" data-bind="click: createNew_click"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/KnockTable/KnockTable.js"></script>
    <script src="~/Scripts/GridSample.js"></script>
}

<div data-bind="with: ModalViewModel">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="txtIntValue">Int Value</label>
                        <input type="text" class="form-control" id="txtIntValue" data-bind="value: IntValue">
                    </div>
                    <div class="form-group">
                        <label for="txtDoubleValue">Double Value</label>
                        <input type="text" class="form-control" id="txtDoubleValue" data-bind="value: DoubleValue" placeholder="Double value">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wait-modal"></div>